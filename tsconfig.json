{
  "compilerOptions": {
    "baseUrl" : "." , 
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "removeComments": false,
    "esModuleInterop": true,
    "noImplicitThis": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "/coverage",
    "/dist",
    "/docs",
    "/node_modules",
  ]
}