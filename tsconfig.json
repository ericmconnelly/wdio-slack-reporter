{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "rootDir": "./src",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "lib": ["DOM", "ES2019"],
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["/coverage", "/dist", "/docs", "/node_modules"]
}
